<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

   <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dip"
        android:text="Map Tileset" />

    <Spinner
        android:id="@+id/tileset_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dip" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dip"
        android:text="Sampling rate (milliseconds)" />

    <EditText
        android:id="@+id/edit_sampling_rate"
        android:layout_width="wrap_content"
        android:layout_height="40dip"
        android:layout_marginTop="5dip"
        android:hint="5000" >
    </EditText>
    
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dip"
        android:text="Set range query radius [m]" />

    <EditText
        android:id="@+id/set_range_query_radius"
        android:layout_width="wrap_content"
        android:layout_height="40dip"
        android:layout_marginTop="5dip"
        android:hint="250" >
    </EditText>

    <Button
        android:id="@+id/apply_general_settings"
        android:layout_width="100dp"
        android:layout_height="40dip"
        android:layout_marginTop="20dip"
        android:text="Apply" />

</LinearLayout>